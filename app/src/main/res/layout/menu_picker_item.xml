<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--식당 이미지뷰-->
    <ImageView
        android:id="@+id/menu_picker_restorant_image"
        android:layout_width="180sp"
        android:layout_height="180sp"

        android:src="@drawable/sample_image"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--식당 이름 텍스트뷰-->
    <TextView
        android:id="@+id/menu_picker_restorant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="6dp"

        android:text="1. 가타쯔무리"
        android:textSize="20sp"
        android:textStyle="bold"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_picker_restorant_image" />

    <!--식당 평점 텍스트뷰-->
    <TextView
        android:id="@+id/menu_picker_restorant_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"

        android:text="5.0"
        android:textColor="@color/mainColor"
        android:textSize="25sp"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@+id/menu_picker_restorant_name"
        app:layout_constraintTop_toBottomOf="@+id/menu_picker_restorant_image" />

</androidx.constraintlayout.widget.ConstraintLayout>