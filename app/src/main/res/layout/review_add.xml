<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--타이틀바-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/review_add_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--뒤로가기버튼-->
        <ImageButton
            android:id="@+id/review_add_return_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"

            android:background="@color/white"
            android:src="@drawable/return_button"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--타이틀바 텍스트-->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="리뷰 쓰기"
            android:textSize="30sp"
            android:textStyle="bold"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/review_add_return_button"
            app:layout_constraintTop_toTopOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--타이틀바 구분선-->
    <View
        android:id="@+id/title_line"
        android:layout_width="wrap_content"
        android:layout_height="1dp"

        android:layout_below="@id/review_add_constraint"

        android:background="@color/black"

        app:layout_constraintBottom_toBottomOf="@+id/review_add_constraint"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/rating_linear"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_add_constraint">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="식당이름"
            android:textSize="30dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/review_add_constraint" />

        <com.willy.ratingbar.ScaleRatingBar
            android:id="@+id/review_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="15dp"
            app:srb_starPadding="4dp"

            />
    </LinearLayout>

    <!--레이팅바 구분선-->
    <View
        android:id="@+id/ratingBar_line"
        android:layout_width="350dp"
        android:layout_height="1.5dp"
        android:layout_marginTop="12dp"

        android:layout_below="@id/review_add_constraint"

        android:background="@color/black"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rating_linear" />

    <EditText
        android:id="@+id/review_text"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="31dp"
        android:layout_marginTop="12dp"

        android:background="@color/white"
        android:gravity="top"

        app:layout_constraintTop_toBottomOf="@+id/ratingBar_line"
        />

    <!--레이팅바 구분선-->
    <View
        android:id="@+id/review_text_line"
        android:layout_width="350dp"
        android:layout_height="1.5dp"
        android:layout_marginTop="12dp"

        android:layout_below="@id/review_add_constraint"

        android:background="@color/black"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_text"
        />

    <ImageButton
        android:id="@+id/review_image_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:src="@drawable/ic_baseline_image_search_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_text_line" />

    <ImageView
        android:id="@+id/review_image"
        android:layout_width="150dp"
        android:layout_height="130dp"

        android:src="@drawable/crying_lion"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_image_add_button" />

    <TextView
        android:id="@+id/review_please"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="식당 사진을 등록해주세요."
        android:textSize="25dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_image" />

    <Button
        android:id="@+id/review_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="50dp"
        android:layout_marginBottom="30dp"

        android:background="@drawable/button_round_hard"
        android:text="등록"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:enabled="false"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>