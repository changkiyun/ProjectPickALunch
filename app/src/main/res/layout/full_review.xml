                />


            <LinearLayout
                android:layout_marginTop="50sp"
                android:layout_marginBottom ="10sp"
                android:id="@+id/rateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/mainText">


                <LinearLayout
                    android:layout_marginVertical="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80sp"
                        android:textSize="20sp"
                        android:layout_height="wrap_content"
                        android:text="맛"/>

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/ic_star"/>

                    <TextView
                        android:id="@+id/taste"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginVertical="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="친절도"/>

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/ic_star"/>

                    <TextView
                        android:id="@+id/kind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginVertical="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="청결도"/>

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/ic_star"/>

                    <TextView
                        android:id="@+id/clean"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginVertical="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="가격"/>

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/ic_star"/>

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text=""/>



                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginVertical="12dp"
                    android:background="#EEEEEE" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginVertical="10sp"
                android:id="@+id/detailItemRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rateLayout"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginTop="20sp"
                android:scrollbars="horizontal"
                android:scrollbarFadeDuration="@integer/material_motion_duration_short_1"
                app:layout_constraintTop_toBottomOf="@id/detailItemRecyclerView" />

            <TextView
                android:id="@+id/reviewDate"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:layout_marginTop="10sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recycler_view"
                android:textColor="@color/mainColor"
                android:text="YYYY-MM-DD"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>