<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/menu_picker_recomend_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"

        android:text="여기 어때요?"
        android:textSize="30sp"
        android:textStyle="bold"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridView
        android:id="@+id/menu_picker_grid_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="10sp"
        android:layout_marginLeft="17sp"
        android:gravity="center"
        android:horizontalSpacing="-10sp"
        android:numColumns="2"
        android:scrollbarSize="5sp"

        android:scrollbarStyle="insideInset"
        android:scrollbarThumbVertical="@color/mainColor"

        android:scrollbarTrackVertical="@color/white"
        android:verticalScrollbarPosition="right"
        android:verticalSpacing="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_picker_recomend_text" />


</androidx.constraintlayout.widget.ConstraintLayout>