<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/sicdangTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sicdangTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가타쯔무리"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view"
        android:layout_marginLeft="12dp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:text="4.8"
        app:layout_constraintLeft_toRightOf="@+id/sicdangTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view"
        android:id="@+id/pyeongJeom"
        android:textSize="35sp"
        android:textAlignment="textEnd"
        android:layout_marginRight="25sp"
        android:textColor="#ff0000"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200sp"
        android:id="@+id/kakaoMap"
        android:src="@drawable/map"
        app:layout_constraintTop_toBottomOf="@+id/sicdangTitle"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/reviewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리뷰"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/kakaoMap"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>